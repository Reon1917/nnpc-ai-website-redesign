---
const { title } = Astro.props;
---

<section class="about-section about-origin">
	<div class="mx-auto grid max-w-6xl gap-10 px-6 pb-16 pt-32 md:pt-28 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
		<div class="about-fade space-y-6" style="--delay: 120ms;">
			<h1 class="font-display text-4xl text-neutral-900 md:text-5xl">
				{title}
			</h1>
			<div class="origin-body text-base leading-relaxed text-neutral-700 md:text-lg">
				<slot />
			</div>
		</div>
		<div class="about-fade origin-visual" style="--delay: 260ms;">
			<div class="origin-visual-inner">
				<span>Visual Placeholder</span>
				<div class="origin-visual-card"></div>
			</div>
		</div>
	</div>
</section>

<style>
	.origin-body :global(p) {
		margin-bottom: 1rem;
	}

	.origin-body :global(p:last-child) {
		margin-bottom: 0;
	}

	.origin-visual {
		position: relative;
		border-radius: 1.6rem;
		padding: 1.75rem;
		min-height: 320px;
		background: linear-gradient(
			135deg,
			rgba(255, 255, 255, 0.96),
			rgba(243, 237, 224, 0.85)
		);
		border: 1px solid rgba(14, 14, 14, 0.08);
		box-shadow: 0 30px 55px rgba(18, 12, 4, 0.14);
		overflow: hidden;
		display: grid;
		place-items: center;
	}

	.origin-visual::before {
		content: "";
		position: absolute;
		inset: 0;
		background-image:
			linear-gradient(rgba(12, 10, 6, 0.08) 1px, transparent 1px),
			linear-gradient(90deg, rgba(12, 10, 6, 0.08) 1px, transparent 1px);
		background-size: 36px 36px;
		opacity: 0.25;
	}

	.origin-visual::after {
		content: "";
		position: absolute;
		inset: -40% 0 40% 0;
		background: radial-gradient(
			circle at top,
			rgba(241, 200, 75, 0.45),
			transparent 65%
		);
		opacity: 0.9;
	}

	.origin-visual-inner {
		position: relative;
		z-index: 1;
		display: grid;
		place-items: center;
		gap: 1.5rem;
		text-transform: uppercase;
		letter-spacing: 0.28em;
		font-size: 0.72rem;
		color: rgba(26, 20, 10, 0.7);
	}

	.origin-visual-card {
		width: min(260px, 80%);
		height: 160px;
		border-radius: 1.2rem;
		background: linear-gradient(
			120deg,
			rgba(241, 200, 75, 0.3),
			rgba(255, 255, 255, 0.95)
		);
		box-shadow:
			0 18px 35px rgba(24, 18, 5, 0.2),
			inset 0 0 0 1px rgba(255, 255, 255, 0.6);
		transform: rotate(-6deg);
	}
</style>
